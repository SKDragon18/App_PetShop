<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/flContainer"
    tools:context=".tabView.manageFinance.BangGiaTab">
    <LinearLayout
        android:id="@+id/llND"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Thêm"
                android:backgroundTint="@color/fresh_blue"
                android:id="@+id/btnThem"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:orientation="vertical">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="5dp">
                    <TextView
                        android:id="@+id/tvMaBangGia"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingVertical="10dp"
                        android:text="Mã"/>
                    <TextView
                        android:id="@+id/tvTGBatDau"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:paddingVertical="10dp"
                        android:layout_marginEnd="5dp"
                        android:text="TG bắt đầu"/>
                    <TextView
                        android:id="@+id/tvTGKetThuc"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:paddingVertical="10dp"
                        android:layout_marginEnd="5dp"
                        android:text="TG kết thúc"/>
                    <TextView
                        android:id="@+id/tvChiNhanh"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:paddingVertical="10dp"
                        android:layout_marginEnd="5dp"
                        android:text="Chi nhánh"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginEnd="10dp"
                        android:text="Edit"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginEnd="10dp"
                        android:text="Delete"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginEnd="10dp"
                        android:text="Apply"/>
                </LinearLayout>
            </TableRow>
            <ListView
                android:id="@+id/lvBangGia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>