<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TableRow
        android:id="@+id/trTaiKhoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp">
            <TextView
                android:id="@+id/tvSoDonDat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:textIsSelectable="true"
                android:text="Số đơn"/>
            <TextView
                android:id="@+id/tvNgayLap"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:text="Ngày lập"/>
            <TextView
                android:id="@+id/tvMaKhachHang"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:text="Mã khách hàng"
                android:textIsSelectable="true"
                />
            <TextView
                android:id="@+id/tvSoDienThoai"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:text="Số điện thoại"
                android:textIsSelectable="true"
                />
            <Button
                android:id="@+id/btnTrangThai"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:focusable="false"
                android:background="@drawable/ban"/>
        </LinearLayout>
    </TableRow>
</LinearLayout>