<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PetShopRegister">
    <LinearLayout
        android:id="@+id/backGroundLogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--Phần trên-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginVertical="15dp"
                    android:layout_marginHorizontal="10dp"
                    app:srcCompat="@drawable/corgi_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="20sp"
                    android:textStyle="italic"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/fresh_blue">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tạo tài khoản mới"
                    android:textSize="20sp"
                    android:textStyle="italic"

                    android:textColor="@color/purple_princess"/>
            </LinearLayout>
        </LinearLayout>

        <!--Phần giữa-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="left|center"
                    android:text="Họ: "
                    android:textSize="16sp"
                    android:textColor="@color/text_color"/>

                <EditText
                    android:id="@+id/edtHo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:layout_marginEnd="40dp"
                    android:hint="Mời nhập họ của bạn"
                    android:inputType="text"
                    android:textColor="@color/text_color"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="left|center"
                    android:text="Tên: "
                    android:textSize="16sp"
                    android:textColor="@color/text_color"/>

                <EditText
                    android:id="@+id/edtTen"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:layout_marginEnd="40dp"
                    android:hint="Mời nhập tên của bạn"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="left|center"
                    android:text="Username: "
                    android:textSize="16sp"
                    android:textColor="@color/text_color"/>

                <EditText
                    android:id="@+id/edtUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:layout_marginEnd="40dp"
                    android:hint="Mời tạo tên đăng nhập của bạn"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="left|center"
                    android:text="Password: "
                    android:textSize="16sp"
                    android:textColor="@color/text_color"/>

                <EditText
                    android:id="@+id/edtPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:layout_marginEnd="40dp"
                    android:hint="Mời tạo mật khẩu của bạn"
                    android:inputType="textPassword"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="left|center"
                    android:text="Password nhập lại: "
                    android:textSize="16sp"
                    android:textColor="@color/text_color"/>

                <EditText
                    android:id="@+id/edtPasswordNhapLai"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:layout_marginEnd="40dp"
                    android:hint="Mời nhập lại mật khẩu của bạn"
                    android:inputType="textPassword"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="left|center"
                    android:text="CCCD: "
                    android:textSize="16sp"
                    android:textColor="@color/text_color"/>

                <EditText
                    android:id="@+id/edtCCCD"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:layout_marginEnd="40dp"
                    android:hint="Mời nhập số căn cước công dân của bạn"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="left|center"
                    android:text="Số điện thoại: "
                    android:textSize="16sp"
                    android:textColor="@color/text_color"/>

                <EditText
                    android:id="@+id/edtSDT"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:layout_marginEnd="40dp"
                    android:hint="Mời nhập số điện thoại của bạn"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="left|center"
                    android:text="Email: "
                    android:textSize="16sp"
                    android:textColor="@color/text_color"/>

                <EditText
                    android:id="@+id/edtEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:layout_marginEnd="40dp"
                    android:hint="Mời nhập email của bạn"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"/>
            </LinearLayout>

        </LinearLayout>

        <!--Phần dưới-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="120dp"
                android:backgroundTint="@color/fresh_blue"
                android:gravity="center"
                android:text="Đăng ký"
                app:strokeColor="#050505" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>